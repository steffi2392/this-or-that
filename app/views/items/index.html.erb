

<div class="container">

	<%= render "item" %>
	
	
	<div class="mash">
		<ul> 
			<li class = "left">
				<ul class = "image">
				<div class = "inner">
				<%= link_to image_tag(@item1.image_front), @item1.link, :target => "_blank", :class => "front" %>
				<%= link_to image_tag(@item1.image_back), @item1.link, :target => "_blank", :class => "back" %>
				</div>
				</ul>
				<ul>
					<li class="button">
						<%= link_to "THIS", showleft_item_path(@item1), :method => :post %>
					</li>
				</ul>
			</li>

			<li class = "right">
				<ul class = "image">
				<div class = "inner">
				<%= link_to image_tag(@item2.image_front), @item2.link, :target => "_blank", :class => "front" %>
				<%= link_to image_tag(@item2.image_back), @item2.link, :target => "_blank", :class => "back" %>
				</div>
				</ul>
				<ul>
					<li class="button">
						<%= link_to "THAT", showright_item_path(@item2), :method => :post %>
					</li>
				</ul>
			</li>
		</ul>
		<div id = "or">
			<%= image_tag("Or2.png") %>
		</div>
	</div>
</div>