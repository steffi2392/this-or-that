

<div class="container_index">


	<p>test: <%= request.env['omniauth.auth']%></p>
	
	<div class="mash">
		<ul> 
			<li class = "left">
				<ul class = "image">
				<div class = "inner">
				<%= link_to image_tag(@item1.image_front), showleft_item_path(@item1), :method => :post, :class => "front" %>
				<%= link_to image_tag(@item1.image_back), showleft_item_path(@item1), :method => :post,  :class => "back" %>
				</div>
				</ul>
			</li>
			<div class="buy" id="buythis">
				<%= link_to image_tag('buythis.png'), @item1.link, :target => 'blank' %>
			</div>
			<div class="pinterest">
				<a href= <%= @item1_pin %> class="pin-it-button" count-layout="horizontal"><img border="0" src="//assets.pinterest.com/images/PinExt.png" title="Pin It" /></a>
			</div>
			
			<a href='javascript:void(run_pinmarklet1())'><img src="http://2.bp.blogspot.com/-lRae8bdMpuA/TzuLrnycXaI/AAAAAAAACQE/YVYUjfs7dm8/s1600/pinmask2.png" style='margin:0; padding:0; border:none;'/></a>
			<script type='text/javascript'>
			function run_pinmarklet1() {
			  var e=document.createElement('script');
			  e.setAttribute('type','text/javascript');
			  e.setAttribute('charset','UTF-8');
			  e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);
			  document.body.appendChild(e);
			}
			</script>

			<li class = "right">
				<ul class = "image">
				<div class = "inner">
				<%= link_to image_tag(@item2.image_front), showright_item_path(@item2), :method => :post, :class => "front" %>
				<%= link_to image_tag(@item2.image_back), showright_item_path(@item2), :method => :post, :class => "back" %>
				</div>
				</ul>
			</li>
			<div class="buy" id="buythat">
				<%= link_to image_tag('buythat.png'), @item2.link, :target => 'blank' %>
			</div>
			<div class="pinterest">
				<a href= <%= @item2_pin %> class="pin-it-button" count-layout="horizontal"><img border="0" src="//assets.pinterest.com/images/PinExt.png" title="Pin It" /></a>
			</div>
		</ul>
	</div>
	<div id="rankings"><%= link_to image_tag('seeRankings.png'), list_items_path %>
	</div>
</div>